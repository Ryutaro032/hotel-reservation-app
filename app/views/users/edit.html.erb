<div class="main-container">
    <h1>プロフィールの編集</h1>
    <%= form_with model: @user do |f|%>
    <div class="table">
        <table>
            <tr>
                <th><%= f.label :icon_image,"画像" %></th>
                <td><%=f.file_field :icon_image %></td>
            </tr>
            <tr>
                <th><%= f.label :name,"名前" %></th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th><%= f.label :self_introduce,"自己紹介" %></th>
                <td><%= f.text_area :self_introduce %></td>
            </tr>
        </table>
        <ul class="submit">
            <li><%= f.submit "登録する",class: "submit-btn" %></li>
            <li><button class="back-btn"><%= link_to "ユーザー情報に戻る", 'javascript:history.back()', class: "link" %></button></li>
        </ul>
    </div>
    <%end%>
</div>