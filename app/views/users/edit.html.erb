<%= @user.name %>
<h1>プロフィールの編集</h1>
<%= form_with model: @user do |f|%>
<p><%= link_to "アカウント情報に戻る", :back %></p>
<div class="table">
    <table>
        <tr>
            <th><%= f.label :icon_image,"画像" %></th>
            <td><%=f.file_field :icon_image %></td>
        </tr>
        <tr>
            <th><%= f.label :name,"名前" %></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><%= f.label :self_introduce,"自己紹介" %></th>
            <td><%= f.text_area :self_introduce %></td>
        </tr>
    </table>
    <ul>
        <li><%= f.submit "登録する" %></li>
    </ul>
</div>
<%end%>