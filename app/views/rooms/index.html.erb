<h1>登録済み一覧</h1>
<p><%=link_to"施設の登録", :new_room %></p>
<div class="table">
    <table>
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>施設名</th>
                <th>施設の紹介</th>
                <th>料金（/日）</th>
                <th>作成日</th>
                <th>編集</th>
                <th>削除</th>
            </tr>
        </thead>
        <tbody>
        <% @rooms.each do |room| %>
            <tr>
                <td><%= room.user_id %></td>
                <td>
                    <% if room.room_image.attached? %>
                        <%=  image_tag room.room_image %>
                    <% else %>
                        <%= image_tag src='default-image.png', class: "hotel-icon", alt: "施設アイコン" %>
                    <%end%>
                </td>
                <td><%= link_to room.room_name, room %></td>
                <td><%= room.introduction %></td>
                <td><%= room.hotel_fee %></td>
                <td><%= room.created_at %></td>
                <td><%= link_to"編集",[:edit, room] %></td>
                <td><%=%></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>

