<h1>ホテル詳細</h1>
<div class="table">
    <% if @room.room_image.attached? %>
        <%=  image_tag room.room_image %>
    <%end%>
    <table>
        <tr>
            <th>施設名</th>
            <td class="room-data"><%= @room.room_name %></td>   
        </tr>
        <tr>
            <th>紹介文</th>
            <td class="room-data"><%= @room.introduction %></td>   
        </tr>
        <tr>
            <th>料金(円/日)</th>
            <td class="room-data"><%= @room.hotel_fee %></td>   
        </tr>
    </table>
    <div>
    </div>
    <%= link_to "施設一覧に戻る", :rooms %>
</div>